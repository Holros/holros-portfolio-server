generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  firstName        String
  lastName         String
  email            String        @unique
  hashedPassword   String
  jobTitle         String
  landingPageAbout String
  resumeLink       String
  homePageAbout    String
  skills           Skill[]
  testimonials     Testimonial[]
  projects         Project[]
  created_at       DateTime      @default(now())
  updated_at       DateTime      @default(now()) @updatedAt
}

model Testimonial {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  testimonial    String
  profilePicture String
  userId         String?
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now()) @updatedAt
}

model Skill {
  id         String    @id @default(uuid())
  fullName   String
  shortName  String    @unique
  projects   Project[]
  userId     String?
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
}

model Project {
  id             String   @id @default(uuid())
  index          Int      @default(autoincrement())
  projectPicture String
  projectName    String
  liveLink       String?
  githubLink     String?
  androidLink    String?
  iosLink        String?
  isMobileApp    Boolean
  skills         Skill[]
  userId         String?
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now()) @updatedAt
}
